#!/bin/bash

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get the directory where this script lives (the template)
TEMPLATE_DIR="$(cd "$(dirname "$0")" && pwd)"

echo -e "${BLUE}"
echo "╔═══════════════════════════════════════════════════════════╗"
echo "║           Laravel API Shell - Project Creator             ║"
echo "╚═══════════════════════════════════════════════════════════╝"
echo -e "${NC}"

# Ask for project path
echo -e "${YELLOW}Where would you like to create your new project?${NC}"
echo -e "Enter the full path (e.g., /Users/alex/Projects/my-api)"
read -p "> " PROJECT_PATH

# Validate path
if [ -z "$PROJECT_PATH" ]; then
    echo -e "${RED}Error: Project path cannot be empty${NC}"
    exit 1
fi

# Expand ~ to home directory
PROJECT_PATH="${PROJECT_PATH/#\~/$HOME}"

# Check if directory already exists
if [ -d "$PROJECT_PATH" ]; then
    echo -e "${RED}Error: Directory already exists at $PROJECT_PATH${NC}"
    exit 1
fi

# Extract directory name from path
DIR_NAME=$(basename "$PROJECT_PATH")

# Ask for app name
echo ""
echo -e "${YELLOW}What is your project name?${NC}"
read -p "[$DIR_NAME] > " PROJECT_NAME
PROJECT_NAME=${PROJECT_NAME:-$DIR_NAME}

# Auto-generate DB name (replace hyphens with underscores for MySQL compatibility)
DB_NAME=$(echo "${PROJECT_NAME}_db" | tr '-' '_' | tr '[:upper:]' '[:lower:]')

# Confirmation
echo ""
echo -e "${BLUE}═══════════════════════════════════════════════════════════${NC}"
echo -e "  Project Path:    ${GREEN}$PROJECT_PATH${NC}"
echo -e "  Project Name:    ${GREEN}$PROJECT_NAME${NC}"
echo -e "  Database:        ${GREEN}$DB_NAME${NC}"
echo -e "  Docker Image:    ${GREEN}${DIR_NAME}/app${NC}"
echo -e "  URL:             ${GREEN}http://localhost:8001${NC}"
echo -e "${BLUE}═══════════════════════════════════════════════════════════${NC}"
echo ""
read -p "Proceed? (Y/n) > " CONFIRM

if [[ "$CONFIRM" =~ ^[Nn] ]]; then
    echo -e "${YELLOW}Cancelled.${NC}"
    exit 0
fi

echo ""
echo -e "${BLUE}Creating project...${NC}"

# Create parent directory if needed
mkdir -p "$(dirname "$PROJECT_PATH")"

# Copy template, excluding unnecessary files
rsync -a \
    --exclude='.git' \
    --exclude='vendor' \
    --exclude='node_modules' \
    --exclude='.env' \
    --exclude='storage/logs/*.log' \
    --exclude='storage/framework/cache/data/*' \
    --exclude='storage/framework/sessions/*' \
    --exclude='storage/framework/views/*' \
    --exclude='bootstrap/cache/*.php' \
    --exclude='create-project' \
    --exclude='tasks' \
    "$TEMPLATE_DIR/" "$PROJECT_PATH/"

echo -e "${GREEN}✓${NC} Template copied"

# Navigate to new project
cd "$PROJECT_PATH"

# Create .env from example
cp .env.example .env

# Update .env values
sed -i '' "s/APP_NAME=.*/APP_NAME=\"$PROJECT_NAME\"/" .env
sed -i '' "s/DB_DATABASE=.*/DB_DATABASE=$DB_NAME/" .env

echo -e "${GREEN}✓${NC} Environment configured"

# Update compose.yaml with new image name
sed -i '' "s|image: 'api-shell/app'|image: '${DIR_NAME}/app'|" compose.yaml

echo -e "${GREEN}✓${NC} Docker config updated"

# Initialize git repo
git init -q
git add .
git commit -q -m "Initial commit from api-shell template"

echo -e "${GREEN}✓${NC} Git repository initialized"

echo ""
echo -e "${GREEN}Project created successfully!${NC}"
echo ""
echo -e "Next steps:"
echo ""
echo -e "  ${YELLOW}cd $PROJECT_PATH${NC}"
echo -e "  ${YELLOW}composer install${NC}"
echo -e "  ${YELLOW}php artisan key:generate${NC}"
echo -e "  ${YELLOW}docker compose up -d --build${NC}"
echo ""

# Ask if they want to run setup now
read -p "Run setup now? (Y/n) > " RUN_SETUP

if [[ ! "$RUN_SETUP" =~ ^[Nn] ]]; then
    echo ""
    echo -e "${BLUE}Installing dependencies...${NC}"
    composer install

    echo ""
    echo -e "${BLUE}Generating application key...${NC}"
    php artisan key:generate

    echo ""
    echo -e "${BLUE}Building and starting containers...${NC}"
    docker compose up -d --build

    echo ""
    echo -e "${GREEN}Done! Your API is running at: http://localhost:8001/${NC}"
fi

echo ""
echo -e "${GREEN}Happy coding!${NC}"
